@{
    ViewData["Title"] = "HTTP";
}
<h1>@ViewData["Title"]</h1>

<p>Please enter the HTTP address.</p>

<form method="post" action="Http">
    <fieldset>
        <br />
        <div>
            <label for="url">Web Address:</label>
            <input type="text" id="url" name="url" style="width: 100%;" value="@ViewBag.Url" />
        </div>
        <br />
        <div>
            <input type="checkbox" id="certificate" name="certificate" />
            <label for="certificate">Disable server certificate verification.</label>
        </div>
        <br />
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Test" class="submit" />
        </div>
    </fieldset>
</form>
<hr />
<fieldset>
    <legend>@ViewBag.HttpResult</legend>
    <textarea readonly style="width: 100%;height: 200px;">@ViewBag.HttpLog</textarea>
</fieldset>
